<UserControl x:Class="GestionVoluntariadoEventosGUI.Views.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestionVoluntariadoEventosGUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="¡Bienvenido al Menú Principal!" FontSize="24" FontWeight="Bold"/>
            <Button Content="Crear Nuevo Evento" Command="{Binding NavigateToEventCreationCommand}" Margin="0,20,0,0"/>
            <Button Content="Cerrar Sesión" Command="{Binding LogoutCommand}" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
